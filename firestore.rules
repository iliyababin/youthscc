rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user has admin role
    function isAdmin() {
      return isAuthenticated() &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper function to check if user has leader role
    function isLeader() {
      return isAuthenticated() &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'leader';
    }

    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && request.auth.uid == userId;
      allow delete: if isAdmin();
    }

    // Bible study groups collection
    match /biblestudygroups/{groupId} {
      // Anyone can read groups
      allow read: if true;

      // Only admins and leaders can create groups
      allow create: if isAdmin() || isLeader();

      // Only admins and leaders can delete groups
      allow delete: if isAdmin() || isLeader();

      // Allow updates in these cases:
      // 1. Admin or leader can update anything
      // 2. Authenticated users can update members and updatedAt fields only
      allow update: if isAdmin() ||
                       isLeader() ||
                       (isAuthenticated() &&
                        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['members', 'updatedAt']));
    }
  }
}
